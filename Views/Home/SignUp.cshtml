@{
    ViewBag.Title = "SignUp";
}


<!Doctype HTML>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SignUp</title>
        <link href="~/Content/bootstrap.css" rel="stylesheet"/>    
        <script src="~/Scripts/bootstrap.js"></script>
         <style>
            .rcorners {
                border-radius: 25px; 
                border: 2px solid #000000 ;
                padding: 20px;
            }
             .allign {
                 font-family:'Monotype Corsiva';
                 margin-top:10px ;
                 margin-bottom:10px; 
                 text-align:center

             }
             .textboxStyle {
                 height:30px ; 
                 width:50% ;
                 font-size:small ;    
                 padding: 20px;
                 text-align:match-parent;          

             }
             .locationStyle {
                 height:30px ; 
                 width:16% ;
                 text-align:center;
             }
           
        </style>
    </head>
        <body>
            

            <br />
            <br />

            <div class="container-fluid box">
                <div class="row" style="text-align:center">
                    <div class="col-sm-6 col-sm-offset-3 ">
                        <h3 class="allign" ><span class="glyphicon glyphicon-log-in"></span> SignUp</h3>
                            
                        <form  class="rcorners" action="/Home/SignUpVerified" method="post">
                               
                                    <label>First Name</label>
                                    <input type="text" placeholder="First Name"  name="FirstName" required class="textboxStyle"  /> 
                                    <br />
                                    <br /> 
                                    <label>Last Name</label>
                                    <input type="text" placeholder="Last Name"  name="LastName" required class="textboxStyle"  />
                                    <br />
                                    <br />
                                    <label>Email&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                    <input type="text" placeholder="Email"  name="Email" required class="textboxStyle"  />
                                    <br />
                                    <br />
                                    <label>Password&nbsp;</label>
                                    <input type="password" placeholder="Password" name="Password" required class="textboxStyle" />                                    
                                    <br />
                                    <br />
                                    <button type="submit" class="btn btn-primary" style="text-align:center;height:40px;width:50%">SignUp</button>
                                
                          </form>
                    </div>
                </div>
                
            </div>
        @section Scripts{
            @Scripts.Render("~/bundles/jqueryval")
            }
    </body>
</html>

